@model midterm_project.Models.Fish

@{
    ViewData["Title"] = "Edit Fish";
}
<form asp-controller="Pet" asp-action="Edit" method="post">
    <h1 class="display-4 text-center mb-5">Edit Fish</h1>

    <partial name="_petInput" model="Model" />

    <input type="hidden" asp-for="Id" />
    <input type="submit" class="btn btn-primary float-end" value="Save">
    <a class="btn btn-light float-end mr-3" asp-controller="Pet" asp-action="List">Back</a>
    
    <a class="btn btn-danger float-end mr-3" asp-controller="Pet" asp-action="Delete" asp-route-id="@Model.Id">Delete Fish</a>
</form>

