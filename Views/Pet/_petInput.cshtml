@model midterm_project.Models.Fish

<div class="form-group">
    <div class="row m-3 input-group">
        <label class="control-label col-md-3 offset-md-1" asp-for="Name">Name </label>
        <input class="form-control col-md-7" asp-for="Name" />
        <div class="col-12 text-danger text-end">
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="row m-3 input-group">
        <label class="control-label col-md-3 offset-md-1" asp-for="Description">Description </label>
        <textarea class="form-control col-md-7" asp-for="Description"></textarea>
        <div class="col-12 text-danger text-end">
            <span asp-validation-for="Description"></span>
        </div>
    </div>

    <div class="form-group">
    <div class="row m-3 input-group">
        <label class="control-label col-md-3 offset-md-1" asp-for="Color">Color </label>
        <input class="form-control col-md-7" asp-for="Color" />
        <div class="col-12 text-danger text-end">
            <span asp-validation-for="Color"></span>
        </div>
    </div>

    <div class="row m-3 input-group">
        <label class="control-label col-md-3 offset-md-1" asp-for="Url">Url </label>
        <input class="form-control col-md-7" asp-for="Url" />
        <div class="col-12 text-danger text-end">
            <span asp-validation-for="Url"></span>
        </div>
    </div>
</div>